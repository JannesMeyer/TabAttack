{
	"manifest_version": 2,
	"browser_specific_settings": {
		"gecko": {
			"id": "tabattack@jannesmeyer.com",
			"strict_min_version": "60.0"
		}
	},
	"name": "__MSG_ext_name__",
	"version": "3.0",
	"description": "__MSG_ext_description__",
	"default_locale": "en",
	"homepage_url": "https://github.com/JannesMeyer/TabAttack",
	"permissions": [
		"tabs",
		"storage",
		"clipboardWrite",
		"contextMenus",
		"activeTab",
		"chrome://favicon/"
	],
	"icons": {
		"48": "images/icon-48.png",
		"96": "images/icon-96.png",
		"128": "images/icon.svg"
	},
	"background": {
		"page": "background.html"
	},
	"options_ui": {
		"page": "options.html",
		"browser_style": true
	},
	"browser_action": {
		"default_icon": "images/transparent.png",
		"default_title": "__MSG_icon_tooltip__",
		"default_popup": "popup.html?action_popup"
	},
  "sidebar_action": {
		"default_icon": "images/tab.svg",
		"default_title": "Tabs",
    "default_panel": "popup.html?sidebar",
    "browser_style": false,
    "open_at_install": false
  },
	"commands": {
		"_execute_browser_action": {
			"suggested_key": { "default": "Alt+Q" }
		},
		"open_tab_list": {
			"description": "Open Tab List"
		},
		"export_current_window": {
			"description": "Export only current window"
		},
		"copy_tab_as_markdown": {
			"description": "__MSG_shortcut_copy_tab_as_markdown__"
		},
		"move_tab_left": {
			"suggested_key": { "default": "Ctrl+Shift+Comma" },
			"description": "__MSG_shortcut_move_tab_left__"
		},
		"move_tab_right": {
			"suggested_key": { "default": "Ctrl+Shift+Period" },
			"description": "__MSG_shortcut_move_tab_right__"
		},
		"duplicate_tab": {
			"description": "__MSG_shortcut_duplicate_tab__"
		},
		"pin_tab": {
			"description": "__MSG_shortcut_pin_tab__"
		}
	}
}