{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"runOptions": {
				"runOn": "folderOpen"
			},
			"label": "TypeScript (watch)"
		},
		{
			"type": "npm",
			"script": "test-watch",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"label": "Jasmine (watch)"
		},
		{
			"type": "npm",
			"script": "lint",
			"group": "test",
			"label": "ESLint",
			"presentation": {
				"focus": true,
				"clear": true,
				"echo": false
			}
		}
	]
}