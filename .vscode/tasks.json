{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "never"
			},
			"runOptions": {
				"runOn": "folderOpen"
			},
			"label": "TypeScript (watch)"
		},
		{
			"type": "npm",
			"script": "test-watch",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"label": "Jasmine (watch)"
		},
		{
			"type": "npm",
			"script": "lint",
			"group": "test",
			"label": "ESLint",
			"problemMatcher": [
				{
					"owner": "eslint",
					"pattern": {
						"regexp": "^(.+):(\\d+):(\\d+):\\s(.+)\\[(Error|Warning|Info)/(.+)\\]",
						"file": 1,
						"line": 2,
						"column": 3,
						"message": 4,
						"severity": 5,
						"code": 6
					},
					"fileLocation": "absolute"
				}
			],
			"presentation": {
				"focus": true,
				"clear": true,
				"echo": false
			}
		}
	]
}