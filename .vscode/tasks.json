{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "never"
			},
			"runOptions": {
				"runOn": "folderOpen"
			},
			"label": "TypeScript (watch)"
		},
		{
			"type": "npm",
			"script": "test-watch",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"label": "Jasmine (watch)"
		},
		{
			"type": "npm",
			"script": "lint",
			"group": "test",
			"label": "ESLint",
			"problemMatcher": {
				"owner": "eslint",
				"pattern": {
					"regexp": "^(.+)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\): (error|warning|info) ([^ ]+) : (.+)",
					"file": 1,
					"location": 2,
					"severity": 3,
					"code": 4,
					"message": 5
				},
				"fileLocation": "absolute"
			},
			"presentation": {
				"clear": true,
				"echo": false,
				"revealProblems": "onProblem"
			}
		}
	]
}